<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/roomPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Price: $0.00"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Title for Payment Selection -->

    <TextView
        android:id="@+id/paymentMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Payment Method"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Cash on Hand Button -->
    <Button
        android:id="@+id/cashOnHandButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash on Hand"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white" />

    <!-- Online Payment Button -->
    <Button
        android:id="@+id/onlinePaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Payment"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

    <!-- Cancel Button (Optional) -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@android:color/holo_red_dark"
        android:backgroundTint="@android:color/white" />
</LinearLayout>
